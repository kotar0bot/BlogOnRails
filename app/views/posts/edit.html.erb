<%= render 'layouts/top' %>
<section  style="background-image: url(<%= asset_path('01.jpg') %>);">
<div class="container u-overlay__inner">
  <div class="row">
    <div class="col-lg-12" style="color:white;">
    <div style="height:70px;"></div>
    <h1>投稿編集</h1>
      <%= form_with model: @post, local: true do |form| %>
        <% if @post.errors.any? %>
        <div id="error_explanation">
          <h2>
            <%= pluralize(@post.errors.count, "つのエラーがあります。") %>
          </h2>
          <ul>
            <% @post.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
        <% end %>
        <div class="container-fluid ">
          <div class="field">
            <%= form.label :title, class: "control-label" %>
            <%= form.text_field :title, class: "form-control" %>
          </div>
          <br />
          <div class="field">
            <%= form.label :context, class: "control-label" %>
            <%= form.text_area :context, class: "form-control" %>
          </div>
          <br />
          <div class="field">
            <%= form.label :image, '画像'%>
            <%= form.file_field :image %>
          </div>
          <br />
          <div class="actions">
            <%= form.submit "投稿する", class: "btn btn-lg btn-primary" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
<%= render 'layouts/footer' %>

