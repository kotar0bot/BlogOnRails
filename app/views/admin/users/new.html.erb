<%= render 'layouts/top'%>

<section  style="background-image: url(<%= asset_path('01.jpg') %>);">
<div class="container u-overlay__inner">
  <div class="row">
    <div class="col-lg-12" style="color:white;">
    <div style="height:70px;"></div>
    <h1>新規作成</h1>
    <%= form_with model: [:admin, @user], local: true do |form| %>
      <div class="container-fluid">
        <div class="field">
          <%= form.label :name, class: "control-label" %>
          <%= form.text_field :name, class: "form-control" %>
        </div>
        <br>
        <div class="field">
          <%= form.label :email, class: "control-label" %>
          <%= form.text_field :email, class: "form-control" %>
        </div>
        <br>
        <% if @admin %>
          <div class="field">
            <%= form.label :admin, class: "form-check-label" %>
          </div>
          <div class="field">
            <%= form.check_box :admin, class: "form-check-input" %>
          </div>
        <% end%>
        <br>
        <div class="field">
          <%= form.label :password, class: "control-label" %>
          <%= form.text_field :password, class: "form-control" %>
        </div>
        <br>
        <div class="actions">
          <%= form.submit "登録する", class: "btn btn-lg btn-primary" %>
        </div>
      </div>
    <% end %>
    </div>
  </div>
</div>

<%= render 'layouts/footer' %>      

