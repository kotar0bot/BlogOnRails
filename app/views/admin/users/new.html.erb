<h1>Admin::Users#new</h1>
<p>Find me in app/views/admin/users/new.html.erb</p>

  <div class="container">

    <div class="row">

      <div class="col-md-8">
      <%= form_with model: [:admin, @user], local: true do |form| %>
        <div class="container-fluid">
          <div class="field">
            <%= form.label :name, class: "control-label" %>
            <%= form.text_field :name, class: "form-control" %>
          </div>
          <br>
          <div class="field">
            <%= form.label :email, class: "control-label" %>
            <%= form.text_field :email, class: "form-control" %>
          </div>
          <br>
          <div class="field">
            <%= form.label :admin, class: "form-check-label" %>
          </div>
          <div class="field">
            <%= form.check_box :admin, class: "form-check-input" %>
          </div>
          <br>
          <div class="field">
            <%= form.label :password, class: "control-label" %>
            <%= form.text_field :password, class: "form-control" %>
          </div>
          <br>
          <div class="actions">
            <%= form.submit "登録する", class: "btn btn-lg btn-primary" %>
          </div>
        </div>
      <% end %>
      </div>
    </div>
  </div>
        

