<%= render 'layouts/top'%>

<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <h2><%= @user.name %></h2>
      <hr>
      <p>メール: <%= @user.email %></p>
      <hr>
      <p>管理者権限: <%= @user.admin %></p>
      <% if @admin %>
        <%= link_to '編集', edit_admin_user_path(@user) %>
        <%= link_to '削除', [:admin, @user],
                method: :delete,
                data: { confirm: '削除しますか？'} %>
        <%= link_to '一覧' , admin_users_path %>
      <% end %>
      <div class="card-footer text-muted">
        作成日時: <%= @user.created_at %>
      </div>
    </div>
  </div>
</div>
<%= render 'layouts/footer'%>