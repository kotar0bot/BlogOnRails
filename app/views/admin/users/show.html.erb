<%= render 'layouts/top'%>

<div class="container">
  <div class="row">
    <div class="col-lg-8">
      <h2><%= @user.name %></h2>
      <hr>
      <p><%= @user.email %></p>
      <p><%= @user.admin %></p>
      <p><%= @user.email %></p>
      <% if @admin %>
        <%= link_to '編集', edit_admin_user_path(@user) %>
        <%= link_to '削除', [:admin, @user],
                method: :delete,
                data: { confirm: '削除しますか？'} %>
        <%= link_to '一覧' , admin_users_path %>
      <% end %>
      <div class="card-footer text-muted">
        Posted on January 1, 2017 by
        <a href="#">Start Bootstrap</a>
      </div>
    </div>
    <%= render 'layouts/side' %>
  </div>
</div>
<%= render 'layouts/footer'%>